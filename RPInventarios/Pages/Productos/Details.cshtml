@page "{id:int?}"
@model RPInventarios.Pages.Productos.DetailsModel

@{
    ViewData["Title"] = "Detalles del producto";
}
<h4>@ViewData["Title"]</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Marca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Marca.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Costo)
        </dt>
        <dd class="col-sm-10">
            @* @Html.DisplayFor(model => model.Producto.Costo) *@
            @String.Format("{0:c}", Model.Producto.Costo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Estatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Estatus)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col">
        <partial name="Acciones/_Details" model="@Model.Producto.Id" />
    </div>
</div>