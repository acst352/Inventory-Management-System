@page "{id:int?}"
@model RPInventarios.Pages.Departamentos.DeleteModel

@{
    ViewData["Title"] = "¿Desea eliminar el departamento con nombre " + Model.Departamento.Nombre + " ?";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departamento.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departamento.Nombre)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Departamento.Id" />
        <partial name="Acciones/_Delete" />
    </form>
</div>
