@page "{id:int?}"
@model RPInventarios.Pages.Marcas.IndexModel

@{
	ViewData["Title"] = "Marcas";
}

<h1>@ViewData["Title"]</h1>
<p class="text-end">
	@Model.Marcas.Count registros
</p>
<p class="mt-3">
	<a class="btn btn-primary" asp-page="Create">
		<i class="fa-solid fa-plus"></i>&nbsp;Crear Marca
	</a>
</p>
<table class="table tabl-hover table-bordered table-strip">
	<thead class="bg-primary text-white">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Marcas[0].Nombre)
			</th>
			<th class="text-center">Acciones</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Marcas)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nombre)
				</td>
				<td class="text-center">
					<a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-secondary">
						<i class="fa-solid fa-pen-to-square"></i>&nbsp;Editar
					</a>
					<a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info">
						<i class="fa-solid fa-rectangle-list"></i>&nbsp;Detalles
					</a>
					<a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">
						<i class="fa-solid fa-trash"></i>&nbsp;Eliminar
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>
