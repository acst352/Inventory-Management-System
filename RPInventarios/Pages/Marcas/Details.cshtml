@page
@model RPInventarios.Pages.Marcas.DetailsModel

@{
	ViewData["Title"] = "Detalles de la marca";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div>
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Marca.Nombre)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Marca.Nombre)
		</dd>
	</dl>
</div>
<div>
	<div class="row">
		<div class="col">
			<a asp-page="./Edit" asp-route-id="@Model.Marca.Id"
			   class="btn btn-primary me-3">
				<i class="fa-solid fa-pen-to-square"></i>&nbsp;Editar
			</a>
			<a asp-page="./Index" class="btn btn-secondary">
				<i class="fa-solid fa-circle-arrow-left"></i>&nbsp;Regresar
			</a>
		</div>
	</div>
</div>
