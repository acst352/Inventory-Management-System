}

<h4>@ViewData["Title"]</h4>
<hr />
<div>
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Marca.Nombre)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Marca.Nombre)
		</dd>
	</dl>

	<form method="post">
		<input type="hidden" asp-for="Marca.Id" />
		<partial name="Acciones/_Delete" />
	</form>
</div>
