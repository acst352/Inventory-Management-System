@page "{id:int?}"
@model RPInventarios.Pages.Marcas.DeleteModel

@{
	ViewData["Title"] = "¿Desea eliminar la marca con nombre " + Model.Marca.Nombre + " ?";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div>
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Marca.Nombre)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Marca.Nombre)
		</dd>
	</dl>

	<form method="post">
		<input type="hidden" asp-for="Marca.Id" />
		<button type="submit" class="btn btn-danger me-3">
			<i class="fa-solid fa-trash"></i>&nbsp;Eliminar
		</button>
		<a asp-page="./Index" class="btn btn-secondary">
			<i class="fa-solid fa-circle-arrow-left"></i>&nbsp;Regresar
		</a>
	</form>
</div>
