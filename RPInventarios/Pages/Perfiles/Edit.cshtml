@page "{id:int?}"
@model RPInventarios.Pages.Perfil.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Perfil.Id" />
            <div class="form-group mt-3">
                <span class="text-danger">*</span>
                <label asp-for="Perfil.Nombre" class="control-label mb-3"></label>
                <input asp-for="Perfil.Nombre" class="form-control" />
                <span asp-validation-for="Perfil.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <partial name="Acciones/_Edit" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
